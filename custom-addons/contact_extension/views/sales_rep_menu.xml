<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sales_reps_action" model="ir.actions.act_window">
        <field name="name">SalesReps</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('contact_type','=','sales_rep')]</field>
        <field name="context">{'default_contact_type': 'sales_rep',
            'default_company_type': 'person'}</field>
    </record>

     <record id="list_sales_rep_action" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field name="sequence" eval="1"/>
        <field name="view_id" ref="base.view_partner_tree"/>
        <field name="act_window_id" ref="sales_reps_action"/>
    </record>

    <record id="form_sales_rep_action" model="ir.actions.act_window.view">
        <field name="view_mode">form</field>
        <field name="sequence" eval="2"/>
        <field name="view_id" ref="contact_extension.view_sales_rep_form"/>
        <field name="act_window_id" ref="sales_reps_action"/>
    </record>

    <menuitem id="sales_rep_menu"
              name="Sales Reps"
              parent="contacts.res_partner_menu_contacts"
              sequence="3"
              action="sales_reps_action"/>

</odoo>

