<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="contact_main_screen" model="ir.ui.view">
        <field name="name">contact.maininfo</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title mb24'][1]/field[6]" position="attributes">
                 <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">customer_main_menu</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
<!--            The Purchase Group in Sales and Purchase Tab-->
            <xpath expr="//page[2]/group[1]/group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>