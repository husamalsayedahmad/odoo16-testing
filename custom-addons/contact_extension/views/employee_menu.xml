<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="employee_action" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_contact_type': 'employee',
            'default_company_type': 'person'}
        </field>
        <field name="domain">[('contact_type','=','employee')]</field>

    </record>

    <record id="list_employee_action" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="sequence" eval="1"/>
            <field name="view_id" ref="base.view_partner_tree"/>
            <field name="act_window_id" ref="employee_action"/>
    </record>

    <record id="form_employee_action" model="ir.actions.act_window.view">
        <field name="view_mode">form</field>
        <field name="sequence" eval="2"/>
        <field name="view_id" ref="contact_extension.view_employee_form"/>
        <field name="act_window_id" ref="employee_action"/>
    </record>


    <menuitem id="employee_menu"
              name="Employee"
              parent="contacts.res_partner_menu_contacts"
              sequence="2"
              action="employee_action"/>

</odoo>